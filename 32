//Write a program to print the sum of the first K natural numbers.


const readline = require('readline');

const inp = readline.createInterface({
  input: process.stdin
});

//const userInput = [];

inp.on("line", (Data) => {
    var inputData = Data;
    var n =parseInt(inputData);
     var sum = 0;
    for(var i=1;i<=n;i++)
    {
         sum = sum+i;
         
        
    }
    console.log(sum)
});
